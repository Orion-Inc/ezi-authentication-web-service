{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@api/*": ["api/v1"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/v1/*"],
      "@services/*": ["services/*"],
      "@guards/*": ["guards/*"],
      "@policies/*":["policies/*"],
      "*":[
        "node_modules/*"
      ]
    }
  },
  "include": [
    "api/**/*",
    "controllers/**/*",
    "models/**/*",
    "guards/*",
    "policies/*",
    "service/*",
    "utils/**/*"
  ]
}